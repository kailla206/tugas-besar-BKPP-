package main

import (
	"fmt"
)

func main() {
	var berat, tinggi float64

	fmt.Print("Masukkan berat badan (kg): ")
	fmt.Scanln(&berat)

	fmt.Print("Masukkan tinggi badan (m): ")
	fmt.Scanln(&tinggi)

	if berat <= 0 || tinggi <= 0 {
		fmt.Println("ERROR: Berat dan tinggi harus lebih dari 0.")
		return
	}

	bmi := berat / (tinggi * tinggi)

	fmt.Printf("BMI Anda: %.2f\n", bmi)

	if bmi < 18.5 {
		fmt.Println("Kategori: Kurus")
	} else if bmi < 25 {
		fmt.Println("Kategori: Normal")
	} else {
		fmt.Println("Kategori: Gemuk")
	}
}
